{
    "version": 8,
    "buildPresets": [
        { "name": "Debug-Mingw-x64", "configurePreset": "Debug-Mingw-x64" },
        { "name": "Debug-linux-gcc", "configurePreset": "Debug-linux-gcc" },
        { "name": "Release-Mingw-x64", "configurePreset": "Release-Mingw-x64" },
        { "name": "Release-linux", "configurePreset": "Release-linux" }
    ],
    "configurePresets": [
        {
            "name": "Global",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_STANDARD": "23"
            },
            "environment": {
                "C_COMPILER_WINDOWS": "gcc",
                "VCPKG_TOOLCHAIN_WINDOWS": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "INSTALL_PREFIX_WINDOWS": "${sourceDir}/dist",
                "C_COMPILER_LINUX": "gcc",
                "VCPKG_TOOLCHAIN_LINUX": "/opt/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "INSTALL_PREFIX_LINUX": "/usr"
            }
        },
        {
            "name": "Debug-Mingw-x64",
            "displayName": "Debug-Mingw-x64",
            "generator": "MinGW Makefiles",
            "inherits": "Global",
            "toolchainFile": "$env{VCPKG_TOOLCHAIN_WINDOWS}",
            "installDir": "$env{INSTALL_PREFIX_WINDOWS}",
            "environment": {
                "charset": "UTF-8"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "$env{C_COMPILER_WINDOWS}",
                "CMAKE_BUILD_TYPE": "Debug",
                "VCPKG_TARGET_TRIPLET": "x64-mingw-static"
            }
        },
        {
            "name": "Debug-linux-gcc",
            "displayName": "Debug-linux-gcc",
            "generator": "Unix Makefiles",
            "inherits": "Global",
            "toolchainFile": "$env{VCPKG_TOOLCHAIN_LINUX}",
            "installDir": "$env{INSTALL_PREFIX_LINUX}",
            "environment": {
                "charset": "UTF-8"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "$env{C_COMPILER_LINUX}",
                "CMAKE_MAKE_PROGRAM": "make",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release-Mingw-x64",
            "displayName": "Release-Mingw-x64",
            "generator": "MinGW Makefiles",
            "inherits": "Global",
            "toolchainFile": "$env{VCPKG_TOOLCHAIN_WINDOWS}",
            "installDir": "$env{INSTALL_PREFIX_WINDOWS}",
            "environment": {
                "charset": "EUC-KR"
            },
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "$env{INSTALL_PREFIX_WINDOWS}",
                "CMAKE_C_COMPILER": "$env{C_COMPILER_WINDOWS}",
                "CMAKE_BUILD_TYPE": "Release",
                "VCPKG_TARGET_TRIPLET": "x64-mingw-static"
            }
        },
        {
            "name": "Release-linux",
            "displayName": "Release-linux",
            "generator": "Unix Makefiles",
            "inherits": "Global",
            "toolchainFile": "$env{VCPKG_TOOLCHAIN_LINUX}",
            "installDir": "$env{INSTALL_PREFIX_LINUX}",
            "environment": {
                "charset": "UTF-8"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "$env{C_COMPILER_LINUX}",
                "CMAKE_MAKE_PROGRAM": "make",
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}
